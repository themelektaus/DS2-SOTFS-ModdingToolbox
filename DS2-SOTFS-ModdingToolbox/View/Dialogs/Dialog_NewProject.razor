<Dialog @ref="dialog">
    <Header>New Project</Header>
    <Body>
        <div class="fieldset">
            <label>Project Name</label>
            <input @bind="projectName" @bind:event="oninput" />
        </div>
    </Body>
    <Footer>
        <Button onClick="OnSubmit" styleClass="button-3 button-primary button-caps" enabled="ProjectUtils.CanCreate(projectName)">
            Create
        </Button>
        <Button onClick="OnCancel" styleClass="button-3 button-normal button-caps">
            Cancel
        </Button>
    </Footer>
</Dialog>

@code {

    [CascadingParameter] public App app { get; set; }

    Dialog dialog;

    string projectName;

    public void Show()
    {
        projectName = null;

        dialog.visible = true;
    }

    void OnSubmit()
    {
        app.project = ProjectUtils.Create(app.config, projectName);
        app.page = nameof(Page_Project);

        dialog.visible = false;
    }

    void OnCancel()
    {
        dialog.visible = false;
    }

}